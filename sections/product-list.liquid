<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="">
  <div class="font-sans flex flex-col md:flex-row justify-center content-center items-center justify-items-center gap-x-4 gap-y-4 py-6">
    {% for item in section.blocks limit: 3 %}
      {% render 'service-product', card_product: item.settings.product %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Product List",
  "settings": [],
  "blocks": [
    {
      "type": "product-item",
      "name": "Product Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
